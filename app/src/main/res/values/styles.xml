<resources>
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#C5CAE9</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">20sp</item> <!-- This is for the spinner itself, not the items -->
        <item name="android:textColor">#000</item>



    </style>

    <style name="RoundedCornersImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="FinalBottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:lineSpacingExtra">0dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>



</resources>
